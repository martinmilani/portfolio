---
interface Props {
  title: string;
  description: string;
  date: string;
  company: string;
}

const { description, title, date, company } = Astro.props;
---

<div
  class="absolute size-[14px] rounded-full mt-1.5 -start-2 bg-dracula-purple"
>
</div>
<div class="md:flex flex-row md_gap-x-4">
  <div class="md:w-1/3">
    <time class="mb-1 text-sm font-normal leading-none">{date}</time>
    <h3 class="text-lg
      font-semibold
      text-dracula-purple
      mt-2">
      {title}
    </h3>
    <h4 class="text-md
    font-semibold
    mb-2">{company}</h4>
  </div>
  <p class="mb-4 text-base font-normal text-gray-200 text-pretty md:w-2/3">
    {description}
  </p>
</div>
